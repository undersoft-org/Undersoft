@using System.ComponentModel.DataAnnotations
@using FluentValidation
@using Undersoft.SDK.Proxies
@using Undersoft.SDK.Rubrics
@using Undersoft.SDK
@using Undersoft.SDK.Invoking

@inherits ViewItem

<CascadingValue Value="@Data">
    <CascadingValue Value="@Root">
        <FluentMenu @bind-Open="@IsOpen" Style="@Style" Anchor="@AnchorId" Trigger="@Trigger" Anchored="@Anchored" HorizontalPosition="HorizontalPosition.Left" Width="100px" @ref="@Reference">
            <CascadingValue Value="@IsOpen">
                @foreach (var rubric in Data.Rubrics)
                {
                    <GenericMenuItem Rubric="@rubric" Parent="@this" />
                }
            </CascadingValue>
        </FluentMenu>
    </CascadingValue>
</CascadingValue>



@using System.ComponentModel.DataAnnotations
@using FluentValidation
@using Undersoft.SDK.Proxies
@using Undersoft.SDK.Rubrics
@using Undersoft.SDK
@using Undersoft.SDK.Invoking

@inherits ViewItem


<CascadingValue Value="@Data">
    <CascadingValue Value="@Root">
        <FluentMenu HorizontalPosition="HorizontalPosition.Center" Style="margin-top:15px;" Anchor="@AnchorId" Trigger="@Trigger" Anchored="@Anchored" @onmenuchange=OnMenuChange>
            @foreach (var rubric in Data.Rubrics)
            {
                <GenericMenuItem Rubric="@rubric" Parent="@this" />
            }
        </FluentMenu>
    </CascadingValue>
</CascadingValue>



@using System.ComponentModel.DataAnnotations
@using FluentValidation
@using Undersoft.SDK.Instant.Proxies
@using Undersoft.SDK.Instant.Rubrics
@using Undersoft.SDK
@using Undersoft.SDK.Invoking

@inherits ViewBase

<div class="generics generic-context-menu menus">
    <CascadingValue Value="@Data">
        <CascadingValue Value="@Root">
            <FluentMenu Anchor="@AnchorId" Trigger="@Trigger" Anchored="false" @onmenuchange=OnMenuChange>
                @foreach (var _rubric in _rubrics)
                {
                    <GenericMenuItem Parent="@this"  Rubric="@_rubric"/> 
                }
            </FluentMenu>
    </CascadingValue>
    </CascadingValue>
</div>





@page "/account/signout"

@inject IRemoteRepository<IDataStore, Authorization> _repository
@inject NavigationManager navigationManager

@using Undersoft.SDK.Service.Data;
@using Undersoft.SSC.Web.Application.Client

<text>Sign out...</text>

@code{
    protected async override Task OnInitializedAsync()
    {
        var userToken = await _repository.ExecuteAsync(auth, AuthorizationAction.SignOut);

        navigationManager.NavigateTo("");
    }
}
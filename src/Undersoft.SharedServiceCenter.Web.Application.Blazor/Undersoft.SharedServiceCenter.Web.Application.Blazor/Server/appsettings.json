{
  "Version": "0.1.1",
  "Title": "SSC Web Application Server",
  "Description": "Shared Service Center Web Application Server",
  "AllowedHosts": "*",
  "Repository": {
    "Sources": {
      "Undersoft.SSC.Infrastructure.Persistance.Stores.AppEventStore": {
        "ConnectionString": "Host=localhost; Port=5432; Database=SSC-App-Events; UserId=postgres; Password=V00dkaPL; Pooling=true;",
        "SourceProvider": "PostgreSql",
        "PoolSize": 128
      }
    },
    "Clients": {
      "Undersoft.SSC.Infrastructure.Persistance.Services.OpenDataService": {
        "ConnectionString": "https://localhost:7200/",
        "ClientProvider": "Open",
        "PoolSize": 128
      }
    }
  },
  "DataCache": {
    "Hours": "0",
    "Minutes": "45"
  },
  "Serilog": {
    "MinimumLevel": "Verbose",
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss} {Level:u10}] {Message:lj} {NewLine}{Exception}{NewLine}",
          "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Literate, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy/MM/dd HH:mm:ss} {Level:u10}] {Message:lj} {NewLine}{Exception}{NewLine}",
          "path": "C:\\logs\\test.txt",
          "shared": "true",
          "fileSizeLimitBytes": "1000000",
          "rollOnFileSizeLimit": true,
          "flushToDiskInterval": "1"
        }
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kestrel": {
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },
  "StoreRoutes": {
    "EntryStore": "entry",
    "EventStore": "event",
    "ReportStore": "report",
    "DataStore": "data",
    "OpenEventStore": "event/open",
    "OpenDataStore": "data/open",
    "StreamEventStore": "event/stream",
    "StreamDataStore": "data/stream",
    "CrudEventStore": "event/crud",
    "CrudDataStore": "data/crud"
  },
  "OpenTelemetry": {
    "IncludeFormattedMessage": true,
    "IncludeScopes": true,
    "ParseStateValues": true
  },
  "ServiceName": "undersoft.ssc.web.application.server",
  "UseTracingExporter": "jeager",
  "UseMetricsExporter": "prometheus",
  "UseLogExporter": "console",
  "HistogramAggregation": "explicit",
  "Jaeger": {
    "AgentHost": "localhost",
    "AgentPort": 6831,
    "Endpoint": "http://localhost:14268",
    "Protocol": "UdpCompactThrift"
  },
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  },
  "IdentityServer": {
    "BaseUrl": "https://localhost:7299",
    "ApiName": "Undersoft SSC Web Application Server",
    "ApiVersion": "v1",
    "ApiBaseUrl": "https://localhost:7299",
    "SwaggerClientId": "ssc.web.application.openapi",
    "Audience": "https://localhost:7299",
    "Issuer": "http://localhost:7201",
    "Scopes": [
      "account.read",
      "account.update",
      "account.create",
      "account.delete",
      "account.execute",
      "activity.read",
      "activity.update",
      "activity.create",
      "activity.delete",
      "resource.read",
      "resource.update",
      "resource.create",
      "resource.delete",
      "schedule.read",
      "schedule.update",
      "schedule.create",
      "schedule.delete"
    ],
    "Claims": [
      "group",
      "id",
      "type_id",
      "code_no",
      "origin_id",
      "client_id",
      "email",
      "name",
      "profile",
      "label",
      "group",
      "type",
      "role",
      "scope",
      "scope"
    ],
    "Roles": [
      "member",
      "user",
      "manager",
      "administrator",
      "deamon",
      "provider",
      "reviewer",
      "auditor",
      "subscriber",
      "publisher",
      "system",
      "service",
      "broker",
      "orchestrator",
      "subcontractor",
      "customer",
      "servicer",
      "integrator"
    ],
    "AdministrationRole": "Administrator",
    "RequireHttpsMetadata": false,
    "CorsAllowAnyOrigin": true,
    "CorsAllowOrigins": []
  }
}

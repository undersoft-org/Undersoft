<?xml version="1.0" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="${basedir}/logs/logger-internal.log">

  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  
  <targets>
    <target name="file" xsi:type="File" fileName="${basedir}/logs/logger-${lowerCase:level}-${shortdate}.log" keepFileOpen="false" encoding="iso-8859-2">
      <layout type="JsonLayout" includeEventProperties="true">
        <attribute name="time" layout="${longdate}" />
        <attribute name="logger" layout="${logger}" />
        <attribute name="level" layout="${level:upperCase=true}"/>
        <attribute name="message" layout="${message}" />       
      </layout>
    </target>

    <target name="console" xsi:type="ColoredConsole" layout="$[{level:upperCase=true}]: ${logger} - ${date:format=HH\:MM\:ss}${newline}${message}${newline}">
      <highlight-row condition="level &gt;= LogLevel.Error" foregroundColor="Red"/>
      <highlight-row condition="level &gt;= LogLevel.Warning" foregroundColor="Yellow"/>
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="file" />
    <logger name="*" minlevel="Trace" writeTo="console" />
  </rules>
</nlog>
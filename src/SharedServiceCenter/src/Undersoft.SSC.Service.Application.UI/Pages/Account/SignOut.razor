@page "/account/signout"

@inject IAuthorization _auth
@inject IAccountAccess _access
@inject NavigationManager _navigation

@using Undersoft.SDK.Service.Application.Access;
@using Undersoft.SDK.Service.Data;
@using Undersoft.SSC.Service.Application.UI;
@using Undersoft.SSC.Service.Application.UI.Compound.Layout

<text>Sign out...</text>

@code
{
    protected async override Task OnInitializedAsync()
    {
        await _access.SignOut(_auth);

        _navigation.NavigateTo("");
    }
}